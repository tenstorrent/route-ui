{
  "compilerOptions": {
    "incremental": true,
    "target": "es2021",
    "module": "commonjs",
    "lib": ["dom", "es2023"],
    "jsx": "react-jsx",
    "strict": true,
    "sourceMap": true,
    "baseUrl": "./src",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "noUncheckedIndexedAccess": true,
    "allowJs": true,
    "outDir": ".erb/dll",
     "skipLibCheck": true

  },
  "exclude": ["test", "release/build", "release/app/dist", ".erb/dll", "node_modules"]
}
